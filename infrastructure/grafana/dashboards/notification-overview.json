{
  "dashboard": {
    "id": null,
    "uid": "notification-overview",
    "title": "Notification System Overview",
    "tags": ["notification", "microservices"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (req/s)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Notifications Sent by Channel",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (channel) (rate(notifications_sent_total[5m]))",
            "legendFormat": "{{channel}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "P95 Latency (ms)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P99",
            "refId": "B"
          }
        ]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(notifications_failed_total[5m])",
            "legendFormat": "{{channel}} - {{error_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Active Connections",
        "type": "stat",
        "gridPos": {"x": 0, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(active_connections)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Kafka Messages Processed",
        "type": "stat",
        "gridPos": {"x": 6, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(kafka_messages_processed_total[5m]))",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
