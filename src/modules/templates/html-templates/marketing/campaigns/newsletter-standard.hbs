<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
  <tr><td style="padding: 20px 30px; text-align: center; border-bottom: 1px solid #eeeeee;"><h1 style="margin: 0; color: #333333; font-size: 24px;">{{companyName}}</h1></td></tr>
</table>
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #7C3AED;">
  <tr><td style="padding: 40px 30px; text-align: center;"><h1 style="margin: 0; color: #ffffff; font-size: 32px; font-weight: bold;">{{newsletterTitle}}{{digestTitle}}{{productName}}{{newsTitle}}</h1></td></tr>
</table>
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
  <tr><td style="padding: 30px; color: #333333; font-size: 16px; line-height: 1.6;">
    <p style="margin: 0 0 16px 0;">Hello {{firstName}},</p>
    <p style="margin: 0 0 16px 0;">{{{mainContent}}}{{{newsContent}}}{{productDescription}}{{period}}</p>
    {{#if heroImage}}<img src="{{heroImage}}" alt="Hero" style="width: 100%; max-width: 600px; height: auto; display: block; margin: 20px 0;" />{{/if}}
    {{#if productImage}}<img src="{{productImage}}" alt="Product" style="width: 100%; max-width: 600px; height: auto; display: block; margin: 20px 0;" />{{/if}}
    {{#if newsImage}}<img src="{{newsImage}}" alt="News" style="width: 100%; max-width: 600px; height: auto; display: block; margin: 20px 0;" />{{/if}}
    <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
      <tr><td align="center" style="padding: 20px 0;"><a href="{{ctaUrl}}{{readMoreUrl}}" style="background-color: #7C3AED; border-radius: 4px; color: #ffffff; display: inline-block; font-size: 16px; font-weight: bold; padding: 12px 24px; text-align: center; text-decoration: none;">{{ctaText}}Read More</a></td></tr>
    </table>
    <p style="margin: 16px 0 0 0; color: #666666; font-size: 12px;"><a href="{{unsubscribeUrl}}" style="color: #666666;">Unsubscribe</a></p>
  </td></tr>
</table>
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #f4f4f4;">
  <tr><td style="padding: 30px; text-align: center; color: #666666; font-size: 14px; line-height: 1.5;"><p style="margin: 0 0 10px 0; font-weight: bold;">{{companyName}}</p><p style="margin: 10px 0 0 0; font-size: 12px;">&copy; {{year}} {{companyName}}. All rights reserved.</p></td></tr>
</table>
