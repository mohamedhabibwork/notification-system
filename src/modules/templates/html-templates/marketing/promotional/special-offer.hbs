<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
  <tr><td style="padding: 20px 30px; text-align: center; border-bottom: 1px solid #eeeeee;"><h1 style="margin: 0; color: #333333; font-size: 24px;">{{companyName}}</h1></td></tr>
</table>
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #F59E0B;">
  <tr><td style="padding: 40px 30px; text-align: center;"><h1 style="margin: 0; color: #ffffff; font-size: 32px; font-weight: bold;">{{offerTitle}}{{season}} Sale{{webinarTitle}}{{eventName}}Special Offer!</h1><p style="margin: 10px 0 0 0; color: #ffffff; font-size: 24px; font-weight: bold;">{{discount}}% OFF{{discountAmount}}</p></td></tr>
</table>
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
  <tr><td style="padding: 30px; color: #333333; font-size: 16px; line-height: 1.6;">
    <p style="margin: 0 0 16px 0;">Hello {{firstName}},</p>
    <p style="margin: 0 0 16px 0;">{{offerDescription}}{{saleDescription}}{{webinarDescription}}{{eventDescription}}{{discountCode}}{{cartTotal}}</p>
    <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #FEF3C7; border-radius: 8px; margin: 20px 0;">
      <tr><td style="padding: 20px; text-align: center;"><p style="margin: 0; font-size: 14px;">Code: <strong style="font-size: 24px; color: #F59E0B;">{{discountCode}}</strong></p><p style="margin: 10px 0 0 0; font-size: 12px;">Expires: {{expiryDate}}{{endDate}}{{endTime}}</p></td></tr>
    </table>
    <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
      <tr><td align="center" style="padding: 20px 0;"><a href="{{ctaUrl}}{{shopUrl}}{{registerUrl}}{{rsvpUrl}}{{cartUrl}}" style="background-color: #F59E0B; border-radius: 4px; color: #ffffff; display: inline-block; font-size: 16px; font-weight: bold; padding: 12px 24px; text-align: center; text-decoration: none;">Shop Now</a></td></tr>
    </table>
    <p style="margin: 16px 0 0 0; color: #666666; font-size: 12px;"><a href="{{unsubscribeUrl}}" style="color: #666666;">Unsubscribe</a></p>
  </td></tr>
</table>
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #f4f4f4;">
  <tr><td style="padding: 30px; text-align: center; color: #666666; font-size: 14px; line-height: 1.5;"><p style="margin: 0 0 10px 0; font-weight: bold;">{{companyName}}</p><p style="margin: 10px 0 0 0; font-size: 12px;">&copy; {{year}} {{companyName}}. All rights reserved.</p></td></tr>
</table>
